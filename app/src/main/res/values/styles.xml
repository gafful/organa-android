<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="PanelTextView" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/tint_1</item>
    </style>
    <style name="PanelLabelTextView" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingStart">5dp</item>
    </style>
    <style name="PanelButton" parent="Base.TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/tint_1</item>
        <item name="android:background">@color/button</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="PanelSquare">
        <item name="android:background">@drawable/transparent_bg_bordered</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
</resources>
